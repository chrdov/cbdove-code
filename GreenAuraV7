local Player = owner
local MyColor = Color3.fromRGB(0,255,0)
local Health = math.huge
local Speed = 32
local Jump = 100
Player.Character:WaitForChild("HumanoidRootPart")
Player.Character.Health.Disabled = true
if not Player.Character:FindFirstChildOfClass("Humanoid") then
  repeat wait() until Player.Character:FindFirstChildOfClass("Humanoid")
end
local Humanoid = Player.Character:FindFirstChildOfClass("Humanoid")
local HPercent = Humanoid.Health / Humanoid.MaxHealth
Humanoid.MaxHealth = Health
Humanoid.Health = Health * HPercent
Humanoid.WalkSpeed = Speed
Humanoid.JumpPower = Jump
Instance.new("ForceField",Player.Character).Visible = false
local Light = Instance.new("PointLight",Player.Character:FindFirstChild("HumanoidRootPart"))
Light.Color = MyColor
Light.Brightness = 25
for k,v in pairs(Player.Character:GetDescendants()) do
  if v:IsA("BasePart") and v.Name ~= "HumanoidRootPart" then
    local Fire = Instance.new("Fire",v)
    Fire.Color = MyColor
    Fire.SecondaryColor = Color3.new()
    Fire.Size = 4
    Fire.Heat = 2
  end
end
