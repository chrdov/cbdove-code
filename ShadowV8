local Player = owner -- Client Portion: hl/https://github.com/chrdov/cbdove-code/raw/master/ClientControlsV2
local Character = Player.Character
local KeyDown = Instance.new("RemoteEvent",Character)
local KeyUp = Instance.new("RemoteEvent",Character)
KeyDown.Name = "KeyDown"
KeyUp.Name = "KeyUp"
local InvisParts = {}
local PartColors = {}
KeyDown.OnServerEvent:Connect(function(Plr,Key)
	if Plr == Player then
		if Key == "f" then
			for _,Part in pairs(Character:GetDescendants()) do
				if Part:IsA("BasePart") or Part:IsA("Decal") and Part.Name ~= "HumanoidRootPart" then
					InvisParts[Part] = Part.Transparency
					if Part:IsA("BasePart") then
						Part.Transparency = 0.75
						PartColors[Part] = Part.Color
						Part.Color = Color3.new(0,0,0)
					else
						Part.Transparency = 0.75
					end
				elseif Part:IsA("Humanoid") then
					Part.WalkSpeed = Part.WalkSpeed * 3
				end
			end
		end
	end
end)
KeyUp.OnServerEvent:Connect(function(Plr,Key)
	if Plr == Player then
		if Key == "f" then
			for _,Part in pairs(Character:GetDescendants()) do
				if Part:IsA("BasePart") or Part:IsA("Decal") then
					Part.Transparency = InvisParts[Part]
					InvisParts[Part] = nil
					if Part:IsA("BasePart") then
						Part.Color = PartColors[Part]
						PartColors[Part] = nil
					end
				elseif Part:IsA("Humanoid") then
					Part.WalkSpeed = Part.WalkSpeed / 3
				end
			end
		end
	end
end)
