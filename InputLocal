local UserInputService = game:GetService("UserInputService")
local Player = game.Players.LocalPlayer
local Character = Player.Character
local Mouse = Player:GetMouse()
local KeyDown = Character:WaitForChild("KeyDown")
local KeyUp = Character:WaitForChild("KeyUp")
Mouse.Button1Down:connect(function()
KeyDown:FireServer(Mouse.Hit,Mouse.Target,"mouseLeft")
end)
Mouse.Button2Down:connect(function()
KeyDown:FireServer(Mouse.Hit,Mouse.Target,"mouseRight")
end)
Mouse.KeyDown:connect(function(key)
KeyDown:FireServer(Mouse.Hit,Mouse.Target,key)
end)
Mouse.Button1Up:connect(function()
KeyUp:FireServer("mouseLeft")
end)
Mouse.Button2Up:connect(function()
KeyUp:FireServer("mouseRight")
end)
Mouse.KeyUp:connect(function(key)
KeyUp:FireServer(key)
end)
