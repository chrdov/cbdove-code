-- Server Code Goes Here
local Player = owner
local Character = Player.Character
local KeyDown = Instance.new("RemoteEvent",Character)
local KeyUp = Instance.new("RemoteEvent",Character)
KeyDown.Name = "KeyDown"
KeyUp.Name = "KeyUp"
local RunService = game:GetService("RunService")
local debounce = false
local KeysHeld = {}
local ComboKeys = ""
local Timer = 0
local ComboFunctions = {}
local function ResetKeys()
  if Timer < 0 then
    Timer = 0
  end
  ComboKeys = ""
end
coroutine.wrap(function()
  while true do
    if Timer > 0 then
      local hb = RunService.Heartbeat:Wait()
      Timer = Timer - hb
      if Timer <= 0 then
        ResetKeys()
      end
    else
      local hb = RunService.Heartbeat:Wait()
    end
  end
end)()
coroutine.wrap(function()
  while RunService.Heartbeat:Wait() do
    
  end
end)
KeyDown.OnServerEvent:Connect(function(Plr,Key)
  if Plr ~= Player then return end
  KeysHeld[tostring(string.byte(Key))] = true
  if debounce then return end
  debounce = true
  ComboKeys = ComboKeys..Key
  Timer = 0.5
  if type(ComboFunctions[ComboKeys]) == "function" then
    ComboFunctions[ComboKeys]()
  end
  debounce = false
end)
KeyUp.OnServerEvent:Connect(function(Plr,Key)
  if Plr ~= Player then return end
  KeysHeld[tostring(string.byte(Key))] = nil
end)
ComboFunctions["ss"] = function()
  
end
